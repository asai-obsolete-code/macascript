

(require 'macascript)
(in-package :maca)
(recompile)


;; unless
(maca (unless a b))

;; reversed inf and unless

(maca ((a b) if b))
(maca (a unless b))



;; CPS conversion (experimental)

;; original lisp version
(defun &+ (v1 v2 cont)
  (funcall cont (+ v1 v2)))
(defun &* (v1 v2 cont)
  (funcall cont (* v1 v2)))
(block out
  (&+ 1 2 (lambda (k)
			(&* k 3 (lambda (l)
					  (return-from out l))))))

;; concept of call-cc

(maca ((alert
		(with-cc (cont)
		  ($ > (get "http://google.com"
					(-/> (xhr) (cont (xhr > responce-text)))))))))

(maca ((console > log (with-cc (cont1) (cont1 (confirm "one")))
				(with-cc (cont2) (cont2 (confirm "two")))
				5
				(with-cc (cont3) (cont3 (confirm "three")))
				4)))

(var cc (-> (cont) ,@body))
(cc (-> (value) (alert value)))

(maca ((var cc)
	   (alert
		(with-cc (cont)
		  (= cc cont) 
		  (cont "hello")))
	   (cc "hello again!")))

;; concept of cps conversion

(maca (with-cps-conversion
		  (* (+ 1 2) 3)))

;; output >> 
(maca ((-/> ()
		   (try 
			((var &+ (-/> (v1 v2 cont) (cont (+ v1 v2))))
			 (var &* (-/> (v1 v2 cont) (cont (* v1 v2))))
			 (var cps-return (-/> (result) (throw result)))
			 (&+ 1 2 (-/> (k)
						  (&* k 3 cps-return))))
			catch (c) ((return c))))))

